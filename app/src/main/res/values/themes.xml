<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_dark10</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_arrow_back_24</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/CustomActionModeStyle</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTimePickerDialogStyle" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="showTitle">false</item>
<!--        <item name="colorControlActivated">#ffd600</item>-->
        <item name="colorAccent">@color/primary_color</item>
<!--        <item name="android:textColorPrimary">#43a047</item>-->
<!--        <item name="android:textColorSecondary">#f44336</item>-->
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SpinnerTheme">
        <item name="android:textColor">@color/gray_color</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="CustomActionModeStyle" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@color/primary_color_dark10</item>
        <item name="titleTextStyle">@style/CustomeActionModeTextStyle</item>

    </style>

    <style name="CustomeActionModeTextStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="backgroundColor">@color/primary_color</item>
    </style>
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark10</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="titleTextColor">@color/primary_color_dark10</item>
    </style>
</resources>